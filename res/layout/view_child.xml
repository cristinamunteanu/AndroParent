<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <!-- View child Form -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- Picture, name and nickname -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/view_child_picture_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="2dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/child_picture_description"
                    android:scaleType="fitStart" />

                <TextView
                    android:id="@+id/view_child_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/orange3"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/view_child_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view_child_name"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/orange3"
                    android:textSize="30sp" />
            </RelativeLayout>
            <!-- Picture Label -->


            <!-- Birthdate Label -->

            <TextView
                style="@style/label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:text="@string/child_birthdate" />

            <EditText
                android:id="@+id/view_child_birthdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:textColor="@color/orange3" />

            <!-- Other details -->

            <TextView
                style="@style/label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:text="@string/child_details" />

            <EditText
                android:id="@+id/view_child_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textMultiLine"
                android:singleLine="true"
                android:textColor="@color/orange3" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@string/back"
                android:textColor="@color/orange3" />
        </LinearLayout>
        <!-- View Child Form Ends -->
    </RelativeLayout>

</ScrollView>